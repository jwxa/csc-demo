version: '3.9'

services:
  redis-node1:
    image: redis:7.4
    container_name: redis-node1
    ports:
      - "6379:6379"
      - "16379:16379"
    command: >
      redis-server --port 6379
                   --cluster-enabled yes
                   --cluster-config-file nodes.conf
                   --cluster-node-timeout 5000
                   --appendonly yes
                   --bind 0.0.0.0
                   --protected-mode no
                   --cluster-announce-ip 192.168.6.141
                   --cluster-announce-port 6379
                   --cluster-announce-bus-port 16379

